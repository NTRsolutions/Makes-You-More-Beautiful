<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".EditActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="71dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/home"
        android:layout_marginEnd="111dp"
        android:src="@drawable/newfolder" />

    <ImageView
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="19dp"
        android:src="@drawable/home" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="32dp"
        android:text="SAVE"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:typeface="normal"
        app:fontFamily="sans-serif" />

    <ImageView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/filterphoto" />


    <View
        android:id="@+id/vertical_divider"
        android:layout_width="1dp"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="121dp"
        android:background="#ffffff" />

    <TextView
        android:id="@+id/filterTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="23dp"
        android:layout_marginStart="34dp"
        android:text="Filter"
        android:textColor="#ffffff"
        android:textSize="30dp"
        app:fontFamily="sans-serif" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/vertical_divider"
        android:background="#ffffff" />

    <View
        android:id="@+id/divider2"
        android:layout_width="1dp"
        android:layout_height="71dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="124dp"
        android:background="#ffffff" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/filterTv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:src="@drawable/smily" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/filterTv"
        android:layout_marginEnd="37dp"
        android:src="@drawable/texteditor" />

    <SeekBar
        android:id="@+id/seekBar1"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="115dp"
        android:max="100"
        android:thumbTint="#80CBBD" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/seekBar2"
        android:layout_alignStart="@+id/seekBar1"
        android:layout_marginBottom="10dp"
        android:text="Contrast"
        android:textColor="#ffffff" />

    <SeekBar
        android:id="@+id/seekBar2"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="186dp"
        android:max="100"
        android:thumbTint="#80CBBD" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/seekBar1"
        android:layout_alignStart="@+id/seekBar2"
        android:layout_marginBottom="10dp"
        android:max="100"
        android:text="Brightness"
        android:textColor="#ffffff" />



</RelativeLayout>